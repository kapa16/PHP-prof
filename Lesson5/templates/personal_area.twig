{% extends "layout.twig" %}

{% block main %}
    <div class="row justify-content-center">
        <h4 class="col-12 p-2">
            Personal information
        </h4>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 p-2">
            Имя: {{user.name}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 p-2">
            Логин: {{user.lastname}}
        </div>
    </div>
    <div class="row justify-content-center">
        <h4 class="col-12 p-2">
            Visited pages:
        </h4>
    </div>
    {% for page in pages %}

    <div class="row justify-content-center">
        <div class="col-12 p-2">
            {{page}}
        </div>
    </div>
    {% endfor %}

{% endblock %}